Search Flights

<%= form_with url: root_path, method: :get do %>
  <div>
    <%= label_tag :departure_airport, "Departure Airport:" %>
    <%= select_tag :departure_airport, options_for_select(@airport_options) %>
  </div>

  <div>
    <%= label_tag :arrival_airport, "Arrival Airport:" %>
    <%= select_tag :arrival_airport, options_for_select(@airport_options) %>
  </div>

  <div>
    <%= label_tag :passengers, "Passengers:" %>
    <%= select_tag :passengers, options_for_select((1..4).map { |i| [i, i] }) %>
  </div>

  <div>
    <%= label_tag :date, "Departure Date:" %>
    <%= select_tag :date, options_for_select(@date_options) %>
  </div>

  <%= submit_tag "Search" %>
<% end %>
